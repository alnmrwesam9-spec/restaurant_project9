# =========================
# Django
# =========================
DJANGO_SETTINGS_MODULE=backend.settings.dev
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:5173,http://127.0.0.1:5173
DJANGO_SECRET_KEY=CHANGE_ME_TO_A_LONG_RANDOM_SECRET

# =========================
# Database (Postgres)
# =========================
POSTGRES_DB=ibla_db
POSTGRES_USER=ibla_user
POSTGRES_PASSWORD=ibla_password

# =========================
# Local Development (DB)
# =========================
# Quick start without installing Postgres locally:
#   USE_SQLITE=1  -> Django will use backend/db.sqlite3 in dev
USE_SQLITE=0

# If you prefer a local Postgres (not Docker), set these:
# DB_NAME=ibla
# DB_USER=postgres
# DB_PASSWORD=postgres
# DB_HOST=localhost
# DB_PORT=5432

# =========================
# External Keys
# =========================
# ضع مفتاح OpenAI هنا عند الحاجة (لا تضع أسرار حقيقية في المستودع)
OPENAI_API_KEY=your_openai_api_key_here
GLOBAL_LEXICON_OWNER_ID=1

# LLM client limits (RPM/TPM/concurrency). Tune to your plan.
# Examples: free-tier is often ~60 RPM, 300k TPM. Adjust as needed.
LLM_RPM=60
LLM_TPM=300000
LLM_CONCURRENCY=10
LLM_MAX_RETRIES=6

# =========================
# pgAdmin (اختياري)
# =========================
PGADMIN_EMAIL=admin@example.com
PGADMIN_PASSWORD=supersecret

# =========================
# Security (Production)
# فعّلها في بيئة الإنتاج فقط
# =========================
SECURE_SSL_REDIRECT=1
SESSION_COOKIE_SECURE=1
CSRF_COOKIE_SECURE=1
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=1
SECURE_HSTS_PRELOAD=1



# === Image pipeline ===
PREFER_WEBP=1
JPEG_QUALITY=85
PNG_OPTIMIZE=1
WEBP_QUALITY=82
WEBP_METHOD=4
MAX_IMAGE_SIDE=0



# === Sentry (backend) ===
SENTRY_DSN=
SENTRY_ENV=production
SENTRY_TRACES=0.05
SENTRY_PROFILES=0.0



# === Sentry (frontend) ===
VITE_SENTRY_DSN=
VITE_SENTRY_TRACES=0.05
